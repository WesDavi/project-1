<Gerenciador>:
    Menu:
        name: 'menu'
    Tarefas:
        name: 'TelaTarefas'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 90 #Essa parte do código é responsável por delimitar o tamanho dos botões
        spacing: 30 #Essa parte é responsável pelo espaço entre os botões, no caso 50 pixels de separação entre um widget e outro
        Image: #essa parte do código é responsável pela imagem
            source: 'logo.png' #como a imagem esta na mesma pasta do código não é necessário passar o caminho, apenas o nome da imagem
            size_hint_y: None   #Deslgando o tamanho padrao da imagem para poder aumentar ela
            height: 150         #Definindo tamanho da imagem
            allow_stretch: True #Parte que faz com que a imagem possa ser redimensionada, fugindo do tamanho padrão
        Button:
            text:'Tarefas'
            on_release: app.root.current = 'TelaTarefas'
        Button:
            text: 'Ajuda'
        Button:
            text: 'Deixar FeedBack'
        Button:
            text: 'Sair'
            on_release: app.stop()

<Tarefas>:
    BoxLayout:
        orientation: 'vertical'

        ActionBar:
            ActionView: #Espaço que contem os widgets
                ActionPrevious:
                    title: 'Tarefas'
                    on_release: app.root.current = 'menu'

                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()

        ScrollView:
            BoxLayout:
                id: box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

    BoxLayout:
        size_hint_y: None
        heigth: 30
        TextInput:
            id:texto
        Button:
            text: '+'
            size_hint_x: None
            width: 30
            on_release: root.addWidget() #metodo da classe tarefa, que foi criado no python

<Excluir>
    height: 200
    size_hint_y: None
    Button:
        text: 'X'
        size_hint_x: None #largura
        width: 60 #largura
        on_release: app.root.get_screen('TelaTarefas').ids.box.remove_widget(root)
    Label:
        id: label
        font_size: 30